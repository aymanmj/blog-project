<div
  class="pt-8 pb-16 lg:pt-16 lg:pb-24 rounded-lg bg-transparent bg-white border-2 dark:bg-gray-900 antialiased"
>
  <article
    class="mx-auto w-full max-w-5xl format format-sm sm:format-base lg:format-lg format-blue dark:format-invert"
  >
    <h1
      class="mb-6 text-6xl text-center font-extrabold leading-tight text-gray-900 lg:mb-6 lg:text-4xl dark:text-white"
    >
      <%= post.title %>
    </h1>
    <div class="flex justify-center items-center mt-8">
      <img class="rounded-lg" src="<%= post.imageUrl %>" alt="" />
    </div>

    <p class="lead flex justify-start text-justify items-start mt-6 text-3xl">
      <%= post.content %>
    </p>

    <div>
      <p class="text-base text-left text-neutral-600 dark:text-neutral-200">
        <span class="font-medium">Published: </span> <%-
        post.createdAt.toDateString() %>
      </p>
    </div>

    <div class="-mt-4">
      <p
        class="-mt-3 text-base text-left text-neutral-600 dark:text-neutral-200"
      >
        <span class="font-medium"> by <%= author.fullname %> </span>
      </p>
    </div>
  </article>
</div>
